{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "GAL",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		}
	],
	"repository": {
		"operators": {
			"patterns": [
				{
				"name": "keyword.operator.word.gal",
				"match": "\\b(DeepCopy|ShallowCopy|Compare|javanew|javaclassmethod|javainstanceof)\\b"
				},
				{
				"name": "keyword.operator.ellipsis.gal",
				"match": "\\.{3}"
				},
				{
				"name": "keyword.operator.logical.gal",
				"match": "\\|\\||&&"
				},
				{
				"name": "keyword.operator.comparison.gal",
				"match": "==|!=|<=|>=|::|!:|<|>"
				},
				{
				"name": "keyword.operator.bitwise.gal",
				"match": "<<|>>|\\^|\\||&|~"
				},
				{
				"name": "keyword.operator.increment.gal",
				"match": "\\+\\+|--"
				},
				{
				"name": "keyword.operator.assignment.gal",
				"match": ":=|\\+=|-=|\\*=|/=|%=|<<=|>>=|&&=|\\^=|\\|="
				},
				{
				"name": "keyword.operator.arithmetic.gal",
				"match": "\\+|-|\\*|/|%"
				},
				{
				"name": "keyword.operator.logical.gal",
				"match": "!"
				}
			]
			},
		"function-declaration": {
			"patterns": [
				{
				"name": "meta.function.gal",
				"begin": "^\\s*(\\.\\w+)\\s+([a-zA-Z_][a-zA-Z0-9_]*)\\s*(:)\\s*(\\{)",
				"end": "\\}",
				"beginCaptures": {
					"1": {"name": "storage.type.gal"},
					"2": {"name": "entity.name.function.gal"},
					"3": {"name": "punctuation.separator.gal"},
					"4": {"name": "punctuation.section.block.begin.gal"}
				},
				"endCaptures": {
					"0": {"name": "punctuation.section.block.end.gal"}
				},
				"patterns": [
					{
					"include": "#comments"
					},
					{
					"include": "#keywords"
					},
					{
					"include": "#strings"
					}
				]
				}
			]
			},
		"keywords": {
			"patterns": [{
				"name": "keyword.control.gal",
				"match": "\\b(AFTER|BEFORE|CLASS|DESCRIPTION|EXTENDEDPARMS|FALSE_OBJ|GALOBJECT|GLOBAL|GLOBALS|IMPLEMENTS|INIT|METHODS|NULL_OBJ|New|PARMS|SUPER|TRUE_OBJ|VARS|__cdecl|__far|__huge|__near|__pascal|__stdcall|_cdecl|_far|_huge|_near|_pascal|auto|break|case|cdecl|char|const|continue|creturn|default|do|double|else|enum|extern|externdll|far|float|for|goto|if|int|intern|interrupt|javalastexception|javamethod|long|near|new|newinst|nobreak|nosuper|pascal|register|return|self|short|signed|sizeof|static|struct|super|switch|typedef|union|unsigned|void|volatile|while|String|boolean|Object)\\b"
			},
			{
				"name": "keyword.control.gal",
				"match": "\\b(define|defined|elif|else|endif|error|if|ifdef|ifndef|include|pragma|undef)\\b"
			},
			{
				"name": "comment.line.double-slash.gal",
				"match": "//.*$"
			},
			{
				"name": "comment.block.gal",
				"begin": "/\\*",
				"end": "\\*/"
			},
			{
				"name": "entity.name.function.gal",
          		"match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*(?=\\()"
			}	
		]
		},
		"strings": {
			"name": "string.quoted.double.gal",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.gal",
					"match": "\\\\."
				}
			]
		}
	},
	"scopeName": "source.gal"
}